doctype html
html
  head
    title="Edit user"
  body
    div
      h1 Edit User
      form(method='POST',action='/edituser/'+users._id)
        #form-group
          label Name:
          input.form-control(name='name',type='text',value=users.name)
          br
          br
        #form-group
          label Age:
          input.form-control(name='age',type='text',value=users.age)
          br
          br
        #form-group
          input.btn.btn-primary(type='submit',value='Submit')
      
